{
    "name": "openeuropa/oe_multilingual",
    "description": "Multilingual features for the OpenEuropa project.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "drupal/core": "^10.3 || ^11",
        "drupal/language_selection_page": "^3.0",
        "drupal/pathauto": "^1.12"
    },
    "require-dev": {
        "composer/installers": "^2.3",
        "drupal/core-composer-scaffold": "^10.3 || ^11",
        "drupal/core-dev": "^10.3 || ^11",
        "drupal/drupal-extension": "^5.0",
        "drupal/redirect": "^1.6",
        "drush/drush": "^12.4 || ^13",
        "ec-europa/toolkit": "^10.23",
        "openeuropa/behat-transformation-context": "^0.2",
        "openeuropa/code-review-drupal": "^1.0.0-alpha"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "autoload": {
        "psr-4": {
            "Drupal\\oe_multilingual\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_multilingual\\": "./tests/src"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": {},
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "ec-europa/toolkit-composer-plugin": true,
            "php-http/discovery": false,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": false
        }
    }
}
